# Production Environment Configuration for PII Analyzer
# Copy this file to .env and modify as needed:
#   cp env.prod.example .env

# ============================================================
# Dashboard Configuration
# ============================================================
# Set a password to protect dashboard access (leave empty for no password)
DASHBOARD_PASSWORD=

# ============================================================
# Processing Configuration
# ============================================================
# Number of parallel worker processes (default: auto-detect based on CPU)
PII_WORKERS=28

# Batch size for file processing (higher = more memory usage)
PII_BATCH_SIZE=100

# Confidence threshold for PII detection (0.0 - 1.0)
PII_THRESHOLD=0.7

# Maximum file size to process in MB (skip larger files)
PII_FILE_SIZE_LIMIT=100

# ============================================================
# OCR Configuration
# ============================================================
# DPI for OCR processing (higher = better quality, slower processing)
OCR_DPI=300

# Number of OCR threads per file
OCR_THREADS=2

# ============================================================
# Tika Configuration
# ============================================================
# Comma-separated list of Tika server endpoints (auto-configured in docker-compose)
# TIKA_SERVER_ENDPOINTS=http://tika1:9998,http://tika2:9998,...

# Enable/disable Tika load balancer
USE_TIKA_LOAD_BALANCER=true

# ============================================================
# Database Configuration
# ============================================================
# Path to SQLite database file
PII_DB_PATH=/app/db/pii_results.db

# ============================================================
# Logging Configuration
# ============================================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

